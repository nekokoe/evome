<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
             xmlns:upload="urn:import:gwtupload.client"
>
    
    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins10">
        <ui:attributes top="10" right="10" bottom="10" left="10" />
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="layout">
        <ui:attributes width="-1" height="-1" margins="{margins10}"/>      
    </ui:with>
    
    <ui:style>
    
    </ui:style>
    
    <container:HorizontalLayoutContainer ui:field="container">
        <container:child layoutData="{layout}">
            <gxt:ContentPanel ui:field="pnlUpload" width="400" height="200" headingText="Step 1 : upload sequence">
                <upload:MultiUploader ui:field="uploader" />
                <button:TextButton ui:field="btnNextStep1">next</button:TextButton>
            </gxt:ContentPanel>
        </container:child>
        <container:child layoutData="{layout}">
            <gxt:ContentPanel ui:field="pnlSelectPair" width="400" height="200" headingText="Step 2 : select gene pairs for calculation" >
                <button:TextButton ui:field="btnBackStep2">back</button:TextButton>
                <button:TextButton ui:field="btnNextStep2">next</button:TextButton>                
            </gxt:ContentPanel>
        </container:child>
        <container:child layoutData="{layout}">
            <gxt:ContentPanel ui:field="pnlSetting" width="400" height="200" headingText="Step 3 : select parameters">
                <button:TextButton ui:field="btnBackStep3">back</button:TextButton>
                <button:TextButton ui:field="btnNextStep3">next</button:TextButton>                   
            </gxt:ContentPanel>
        </container:child>
        <container:child layoutData="{layout}">
            <gxt:ContentPanel ui:field="pnlConfirm" width="400" height="200" headingText="Step 4 : confirming before submission" >
                <button:TextButton ui:field="btnBackStep4">back</button:TextButton>
                <button:TextButton ui:field="btnSubmitStep4">submit</button:TextButton>    
            </gxt:ContentPanel>
        </container:child>
    </container:HorizontalLayoutContainer>
</ui:UiBinder>