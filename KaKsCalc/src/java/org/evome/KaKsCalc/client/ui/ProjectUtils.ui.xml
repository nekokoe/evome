<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:toolbar="urn:import:com.sencha.gxt.widget.core.client.toolbar"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
>
    <ui:with field="images" type="org.evome.KaKsCalc.client.widget.resources.ExampleImages"/>
    
    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins0">
        <ui:attributes top="0" right="0" bottom="0" left="0" />
    </ui:with>
      <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins10">
    <ui:attributes top="10" right="10" bottom="10" left="10" />
  </ui:with>
  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="defaultVerticalLayout">
    <ui:attributes width="1" height="-1" />
  </ui:with>
  <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="contentRowData">
    <ui:attributes width="-1" height="-1" margins="{margins10}"/>      
  </ui:with>

    <ui:style>
        .celltext{
            font-size:22px;
        }
       
    </ui:style>
    <!-- start of project status page -->

    <container:VerticalLayoutContainer>
        <container:child layoutData="{defaultVerticalLayout}">
            <toolbar:ToolBar borders="true">
                <button:TextButton ui:field="btnProjectAdd" text="Add New Project..." icon="{images.add}"/>
                <button:TextButton ui:field="btnProjectDel" text="Delete This Project..." icon="{images.delete}"/>
            </toolbar:ToolBar>            
        </container:child>
        <container:child layoutData="{contentRowData}">
            <!--<g:Label>test</g:Label>-->
            <g:Grid styleName="{style.celltext}">
                <g:row>
                    <g:customCell>
                        <g:Label>Project ID</g:Label>
                    </g:customCell>
                    <g:customCell>
                        <g:Label ui:field="lblProjectID">test</g:Label>
                    </g:customCell>                    
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:Label>Project Name</g:Label>
                    </g:customCell>
                    <g:customCell>
                        <g:Label ui:field="lblProjectName">test</g:Label>
                    </g:customCell>                    
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:Label>Project Owner</g:Label>
                    </g:customCell>
                    <g:customCell>
                        <g:Label ui:field="lblProjectOwner">test</g:Label>
                    </g:customCell>                    
                </g:row>
                <g:row>
                    <g:customCell>
                        <g:Label>Project Details</g:Label>
                    </g:customCell>
                    <g:customCell>
                        <g:Label ui:field="lblProjectComment">test</g:Label>
                    </g:customCell>                    
                </g:row>                                
            </g:Grid>
        </container:child>
        
    </container:VerticalLayoutContainer>
    <!-- end of project status page -->

</ui:UiBinder>