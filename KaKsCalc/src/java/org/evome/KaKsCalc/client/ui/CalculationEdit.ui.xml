<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client"
             xmlns:form="urn:import:com.sencha.gxt.widget.core.client.form"
             xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
             xmlns:button="urn:import:com.sencha.gxt.widget.core.client.button"
>
    <ui:with type="com.sencha.gxt.core.client.util.Margins" field="margins10">
        <ui:attributes top="10" right="10" bottom="10" left="10" />
    </ui:with>
    
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="defaultVerticalLayout">
        <ui:attributes width="1" height="-1" margins="{margins10}" />
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.VerticalLayoutContainer.VerticalLayoutData" field="flexVerticalLayout">
        <ui:attributes width="1" height="0.9" margins="{margins10}"/>
    </ui:with>
    <ui:with type="com.sencha.gxt.widget.core.client.container.HorizontalLayoutContainer.HorizontalLayoutData" field="defaultHorizontalLayout">
        <ui:attributes width="-1" height="1" margins="{margins10}"/>
    </ui:with>
        
    <ui:style>

    </ui:style>
        <container:VerticalLayoutContainer>
            <container:child layoutData="{defaultVerticalLayout}">
                <form:FieldLabel text="Calculation ID" >
                    <form:widget>
                        <form:TextField ui:field="txtCalcID" />
                    </form:widget>
                </form:FieldLabel>
            </container:child>
            <container:child layoutData="{defaultVerticalLayout}">
                <form:FieldLabel text="Calculation Owner" >
                    <form:widget>
                        <form:TextField ui:field="txtCalcOwner"/>
                    </form:widget>
                </form:FieldLabel>                
            </container:child>
            <container:child layoutData="{defaultVerticalLayout}">
                <form:FieldLabel text="Related Project" >
                    <form:widget>
                        <form:TextField ui:field="txtCalcProject"/>
                    </form:widget>
                </form:FieldLabel>
            </container:child>
            <container:child layoutData="{defaultVerticalLayout}">
                <form:FieldLabel text="Calculation Name">
                    <form:widget>
                        <form:TextField ui:field="txtCalcName" allowBlank="false"/>
                    </form:widget>
                </form:FieldLabel>
            </container:child>
            <container:child layoutData="{flexVerticalLayout}">
                <form:FieldLabel text="Calculation Details">
                    <form:widget>
                        <form:TextArea ui:field="txtCalcComment"/>
                    </form:widget>
                </form:FieldLabel> 
            </container:child>
            <container:child layoutData="{defaultVerticalLayout}">
                <container:HorizontalLayoutContainer>
                    <container:child layoutData="{defaultHorizontalLayout}">
                        <button:TextButton ui:field="btnSave">Save</button:TextButton>    
                    </container:child>
                    <container:child layoutData="{defaultHorizontalLayout}">
                        <button:TextButton ui:field="btnCancel">Cancel</button:TextButton>
                    </container:child>                    
                </container:HorizontalLayoutContainer>
            </container:child>
        </container:VerticalLayoutContainer>

</ui:UiBinder>